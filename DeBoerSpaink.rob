NAME XBOT9001

Bank StartPlus
  SET #Active, 999

  SET #2, 0
  @Loop1
  ADD #2, 1

  ; Maak en activeer nieuwe robot
  CREATE 2, 3, 0
  TRANS 2, 1
  TRANS 3, 2
  TRANS 4, 3
  SET %Active, 1

  ; Draai en herhaal
  TURN 0
  COMP #2, 4
    JUMP @Loop1

  @DeathLoop
  JUMP @DeathLoop

Bank Search
  ; Scan vakje
  SCAN #1

  ; Als niet leeg
  COMP #1, 0
    JUMP @NotEmpty

  ; Maak en activeer nieuwe robot
  CREATE 2, 3, 0
  TRANS 1, 1
  TRANS 2, 2
  TRANS 3, 3
  SET %Active, 1

  ; Stop
  JUMP @End1

  @NotEmpty

  ; Als zelfde bot
  COMP #1, 1
    JUMP @End1

  ; Injecteer sterf virus
  SET %Active, 0
  TRANS 2, 1
  SET %Active, 2

  ; Stop deze robot
  @End1
  SET #Active, 0

BANK NukeBehind
  ; Draai om
  TURN 0
  TURN 0

  ; Stop als core
  COMP %Active, 0
    JUMP @End2

  ; Injecteer sterf virus
  TRANS 1, 1
  SET %Active, 2

  ; Sterf
  @End2
  DIE

BANK Locate
  @Loop3
  TURN 0
  JUMP @Loop3
