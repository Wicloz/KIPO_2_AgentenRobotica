NAME XBOT9001

; Deze bank bepaalt de acties van de start robot.
; Dit bestaat uit het maken en uiteindelijk weer verwijderen van de 4 armen.
Bank StartPlus
  SET #Active, 999

  SET #2, 0
  @Loop1
  ADD #2, 1

  ; Stop als naast andere core
  COMP %Active, 999
    JUMP @GoodToGo
  SET #3, 0
  @Loop9002
  ADD #3, 1
  COMP #3, 317
    JUMP @Loop9002
  JUMP @SkipCreate
  @GoodToGo

  ; Wacht voor betere timing
  SET #3, 0
  @Loop9001
  ADD #3, 1
  COMP #3, 50
    JUMP @Loop9001

  ; Maak en activeer nieuwe robot
  CREATE 2, 3, 0
  TRANS 2, 1
  TRANS 3, 2
  TRANS 4, 3
  SET %Active, 1
  @SkipCreate

  ; Draai en herhaal
  TURN 0
  COMP #2, 4
    JUMP @Loop1

  ; Wacht op verwijderen
  @DeathLoop
  COMP #Active, 999
    JUMP @DeathLoopDone
  JUMP @DeathLoop

  ; Verwijder armen
  @DeathLoopDone

  SET #2, 0
  @Loop2
  ADD #2, 1

  SCAN #1
  COMP #1, 2
    JUMP @SkipLoop2

  SET %Active, 51

  @SkipLoop2
  TURN 0

  COMP #2, 4
    JUMP @Loop2

  ; Sterf
  DIE

; Deze bank is voor de robots waaruit de armen bestaan.
; Dit bestaat uit langzaam de armen laten groeien en daarna wachten op een
; verwijder commando, en omgaan met tegen de andere kleur botsen.
Bank Search
  ; Wacht
  SET #2, 0
  @Loop8
  ADD #2, 1
  COMP #2, 100
    JUMP @Loop8

  COMP #Active, 1
    JUMP @DoeCommando

  ; Scan vakje
  SCAN #1
  COMP #1, 0
    JUMP @NotEmpty

  ; Maak en activeer nieuwe robot
  CREATE 2, 3, 0
  TRANS 1, 1
  TRANS 2, 2
  TRANS 3, 3
  SET %Active, 1

  ; Stop
  JUMP @WachtOpCommando

  @NotEmpty

  ; Als zelfde bot
  COMP #1, 1
    JUMP @WachtOpCommando

  ; Workaround voor core
  COMP %Active, 999
    JUMP @SkipJump
  JUMP @WachtOpCommando
  @SkipJump

  ; Aanraak modus
  SET #Active, 42

  ; Infecteer ander
  COMP %Active, 42
    SET %Active, 53

  ; Infecteer zichzelf
  TURN 0
  TURN 0
  SET %Active, 52

  ; Word de locate
  TURN 0
  TURN 0
  BJUMP 2, 1

  ; Wacht op commandos
  @WachtOpCommando
  COMP #Active, 1
    JUMP @DoeCommando
  JUMP @WachtOpCommando

  @DoeCommando
  COMP #Active, 51
    JUMP @DoeCommando2
  JUMP @CommandoVerwijderVoren
  @DoeCommando2
  COMP #Active, 52
    JUMP @DoeCommando3
  JUMP @CommandoVerwijderAchteren
  @DoeCommando3
  COMP #Active, 53
    JUMP @DoeCommando4
  JUMP @CommandoVerwijderBeiden
  @DoeCommando4

  @CommandoVerwijderVoren
  COMP %Active, 53
    SET %Active, 51
  DIE

  @CommandoVerwijderAchteren
  TURN 0
  TURN 0
  SET %Active, 52
  DIE

  @CommandoVerwijderBeiden
  COMP %Active, 42
    SET %Active, 51
  TURN 0
  TURN 0
  SET %Active, 52
  JUMP 0

; Deze bank is voor de robots die de armen van het uiteindelijke kruis gaan
; vormen.
; Hiervoor wordt er een kopie gemaakt en naar de overkant gestuurd.
BANK Locate
  ; Ga naar de overkant
  @GoToCoreLoop
  SCAN #1

  COMP #1, 2
    JUMP @NotSelf
  DIE
  @NotSelf

  COMP #1, 0
    JUMP @DoneMoving
  MOVE
  JUMP @GoToCoreLoop
  @DoneMoving

  ; En draai weer om
  TURN 0
  TURN 0

  ; Maak 2e locate
  COMP #Active, 42
    JUMP @SkipNewLocate

  SET #2, 0
  @Loop3
  ADD #2, 1
  COMP #2, 300
    JUMP @Loop3

  CREATE 2, 3, 1
  TRANS 2, 1
  TRANS 3, 3
  SET %Active, 1
  @SkipNewLocate

  ; Maak kruis dingen
  TURN 0
  CREATE 2, 1, 1
  TRANS 3, 1
  SET %Active, 1

  TURN 1
  CREATE 0, 1, 0
  TRANS 1, 1

  ; Stop
  SET #Active, 0

; Deze bank wordt gebruikt om de laatste 2 zij armen van het uiteindelijke
; kruis te maken.
BANK MakeCrossArm
  TURN 0
  MOVE
  TURN 1
  CREATE 0, 1, 0
  SET #Active, 0
